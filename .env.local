# 로컬 개발용 샘플 (.env.local)
# 필요한 값으로 수정 후 각 서비스에서 dotenv로 로드하여 사용한다.
APP_ENV=local
NODE_ENV=development

# 공통 서비스 포트/호스트
APP_HOST=127.0.0.1
APP_PORT=3000
API_PORT=3000
WEB_PORT=3001
APP_BASE_URL=http://localhost:3000

# 데이터베이스 접속 정보 (로컬)
DB_VENDOR=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=app_password
DB_NAME=app_db
DB_SCHEMA=public
DB_DISABLE=false

# 보안/로그 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ENABLE_HELMET=true
CSP_ENABLED=false
LOG_LEVEL=debug
JWT_SECRET=local-secret-change-me
JWT_EXPIRES_IN=1h
BCRYPT_SALT_OR_ROUNDS=10
