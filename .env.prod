# 운영용 샘플 (.env.prod)
APP_ENV=prod
NODE_ENV=production

# 공통 서비스 포트/호스트
APP_HOST=0.0.0.0
APP_PORT=3000
API_PORT=3000
WEB_PORT=3001
APP_BASE_URL=https://api.example.com

# 데이터베이스 접속 정보 (운영 DB - 예시용)
DB_VENDOR=postgres
DB_HOST=prod-db.internal
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=change_me_securely
DB_NAME=app_db
DB_SCHEMA=public
DB_DISABLE=false

# 보안/로그 설정
CORS_ALLOWED_ORIGINS=https://example.com,https://api.example.com
ENABLE_HELMET=true
CSP_ENABLED=true
LOG_LEVEL=warn
