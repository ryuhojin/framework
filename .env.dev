# 개발 서버용 샘플 (.env.dev)
APP_ENV=dev
NODE_ENV=development

# 공통 서비스 포트/호스트
APP_HOST=0.0.0.0
APP_PORT=3000
API_PORT=3000
WEB_PORT=3001
APP_BASE_URL=https://dev-api.example.com

# 데이터베이스 접속 정보 (개발 DB)
DB_VENDOR=postgres
DB_HOST=dev-db.internal
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=change_me
DB_NAME=app_db_dev
DB_SCHEMA=public
DB_DISABLE=false

# 보안/로그 설정
CORS_ALLOWED_ORIGINS=https://dev.example.com,https://dev-api.example.com
ENABLE_HELMET=true
CSP_ENABLED=false
LOG_LEVEL=info
JWT_SECRET=dev-secret-change-me
JWT_EXPIRES_IN=30m
BCRYPT_SALT_OR_ROUNDS=10
