# API 운영 환경 예시
APP_ENV=prod
NODE_ENV=production
API_HOST=0.0.0.0
API_PORT=3000
APP_BASE_URL=https://api.example.com

# 데이터베이스 설정 (prod)
DB_VENDOR=postgres
DB_HOST=prod-db.internal
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=change_me_securely
DB_NAME=app_db
DB_SCHEMA=public
DB_DISABLE=false

# 보안/로그
CORS_ALLOWED_ORIGINS=https://example.com,https://api.example.com
ENABLE_HELMET=true
CSP_ENABLED=true
LOG_LEVEL=warn
JWT_SECRET=prod-secret-rotate-me
JWT_EXPIRES_IN=15m
BCRYPT_SALT_OR_ROUNDS=12
